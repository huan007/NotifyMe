<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.huannguyen.notifyme.UserRegistrationActivity"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.45"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:visibility="invisible"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="bottom"
            android:text="Almost done!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We need to know if you are a..."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:visibility="visible"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.45"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:weightSum="1">


        <ImageView
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:clickable="true"
            android:onClick="onClickGuest"
            android:scaleType="centerCrop"
            android:src="@drawable/client" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:clickable="true"
            android:onClick="onClickHost"
            android:scaleType="centerCrop"
            android:src="@drawable/host" />
    </LinearLayout>

</LinearLayout>
