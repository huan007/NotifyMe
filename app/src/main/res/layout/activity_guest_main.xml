<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huannguyen.notifyme.GuestMainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Your ticket number is"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/WaitNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="N/A"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="110dp" />

        <TextView
            android:id="@+id/WaitID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="N/A"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.17"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Ticket description"
        android:textStyle="bold"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/storeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.14"
        android:gravity="center"
        android:text="Store name: N/A"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/storeAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.13"
        android:gravity="center"
        android:text="Store address: N/A"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/storeCurrNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.13"
        android:gravity="center"
        android:text="Store current number: N/A"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="268dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:onClick="onClickTicket"
        android:src="@drawable/buttonticket" />

</LinearLayout>
